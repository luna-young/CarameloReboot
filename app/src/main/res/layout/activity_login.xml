<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/logo_image_login"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/galapagos"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_edittext_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:ems="10"
        android:hint="@string/login001"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image_login" />

    <EditText
        android:hint="@string/login002"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:ems="10"
        android:id="@+id/password_edittext_login"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_login"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_login"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_login"
        android:background="@drawable/rounded_edittext_register_login"/>
    <Button
        android:text="@string/login000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:id="@+id/login_button_login"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_login"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_login"/>
    <TextView
        android:text="@string/login003"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_textview_login"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/login_button_login"
        app:layout_constraintStart_toStartOf="@+id/login_button_login"
        app:layout_constraintEnd_toEndOf="@+id/login_button_login"/>

</androidx.constraintlayout.widget.ConstraintLayout>